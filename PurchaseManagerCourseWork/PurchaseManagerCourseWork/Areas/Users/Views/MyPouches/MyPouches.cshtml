@model System.Collections.Generic.IEnumerable<BOL.Pouch>

@{
    ViewBag.Title = "MyPouches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MPouches</h2>
<script>
    function ConfirmDelete() {
        return confirm("Вы уверены, что хотите удалить кошелек? Это действие нельзя будет отменить!");
    }
</script>
@if (ViewBag.Message != "")
{
    <div class="alert alert-dismissable alert-info">
        <button type="button" class="close" data-dismiss="alert">x</button>
        @ViewBag.Message
    </div>
}
<p>
    @Html.ActionLink("Create New", "Index", "AddPouch")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Money)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                @Html.ActionLink("Details", "Index", new { controller = "PouchDetails", id = item.PouchId }) |
                @Html.ActionLink("Delete", "DeletePouch", new { id = item.PouchId }, new {onclick = "return ConfirmDelete()"})
            </td>
        </tr>
    }

</table>
