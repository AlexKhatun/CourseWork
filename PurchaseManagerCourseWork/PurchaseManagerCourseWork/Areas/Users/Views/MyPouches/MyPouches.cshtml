@model System.Collections.Generic.IEnumerable<BOL.Pouch>

@{
    ViewBag.Title = "MyPouches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MyPouches</h2>

<h1>@ViewBag.Message</h1>

<p>
    @Html.ActionLink("Create New", "Index", "AddPouch")
</p>
<table class ="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PouchId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Money)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PouchId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Money)
        </td>
        <td>
            @Html.ActionLink("Details", "Index", new {controller = "PouchDetails", id = item.PouchId}) |
            @Html.ActionLink("Delete", "DeletePouch", new {id = item.PouchId})
        </td>
    </tr>
}

</table>
